@{
    ViewBag.Title = "My Awesome Grade Calculator!";
}

<body>
    <h2>Grade Calculator</h2>
    <h3>Enter received grade percentage</h3>
    <br />
    <form>
        <label>Assignments: </label>
        <input type="number" min="0" max="100" required id="assignments" />
        <br />
        <label>Group Projects: </label>
        <input type="number" min="0" max="100" required id="groupProjects" />
        <br />
        <label>Quizzes: </label>
        <input type="number" min="0" max="100" required id="quizzes" />
        <br />
        <label>Exams: </label>
        <input type="number" min="0" max="100" required id="exams" />
        <br />
        <label>Intex: </label>
        <input type="number" min="0" max="100" required id="intex" />
        <br />
        <br />
        <input type="submit" value="Calculate Grade" id="submitButton" />
    </form>
</body>